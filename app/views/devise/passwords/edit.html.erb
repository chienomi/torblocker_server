<div style="height:125px"></div>
<div style="width:700px;margin:0 auto;">
  <div align="center">
<h2>新しいパスワードを設定</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.hidden_field :reset_password_token %>

    <span class="input-group-addon">新しいパスワード</span>
    <%= f.password_field :password, autocomplete: "off", required: true, autofocus: true, placeholder: "８文字以上の英数字" , class: "form-control" , style: "width:100%"%>
    <br>

  <div align="center">
    <%= f.button :submit,  class: "btn btn-primary", style: "width:10%"%>
  </div>
<% end %>
</div>
