<div style="height:135px"></div>
<%= devise_error_messages! %>
<h2>プロフィール <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
    <div>
      <%= f.label :username %><br />
      <%= f.text_field :username, required: true, autofocus: true %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, required: true%>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p> 現在メールによる認証待ちです。。。: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div>
      <%= f.label :password %> <br/>
      <%= f.password_field :password, autocomplete: "off", hint: "変更しない場合は空白でおkです", required: false %>
    </div>
    <div>
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", required: false %>
    </div>
    <div>
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off",
      hint: "変更には現在のパスワードが必要です", required: true %>
    </div>

  <div class="form-actions">
      <%= f.button :submit, "情報を更新" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "アカウントを削除", registration_path(resource_name), data: { confirm: "アカウントを削除しますか？" }, method: :delete %></p>
