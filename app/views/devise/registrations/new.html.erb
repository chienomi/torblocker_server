<div align="center" style="height:45px"></div>
<div class="row">
	<div class="col-md-4"></div>

	<div class="col-md-4">
			<h1 align="center">Sign up</h1>
			<br>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  	<%= devise_error_messages! %>
				  	<div class="form-inputs">
							<div>
						  		<%= f.text_field :user_name, required: true, autofocus: true, class: 'text_i', placeholder: " Name"%>
					  		</div>
				  		<br>
					  		<div>
						    	<%= f.email_field :email, required: true, class: 'text_i', placeholder: " e-mail"%>
							</div>
						<br>
							<div>
						    	<%= f.password_field :password, autocomplete: "off", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , class: 'text_i', placeholder: " Password ( 8 char. or more )"%>
							</div>
						<br>
							<div>
						    	<%= f.password_field :password_confirmation, autocomplete: "off", required: true , class: 'text_i', placeholder: " Password Confirmation"%>
					  		</div>
				  		<br>
				  		<!-- <br>
				  			<div class="g-recaptcha" data-sitekey="6LcPBhgTAAAAAG0ify2nXoWV6gl472x95q3Opvq7"></div> -->
				  	</div>

			          <div class="form-actions" align="center">
			              <%= f.submit "Sign up", class: 'btn btn-primary', style: "width:100%"%>
			          </div>
			<% end %>
			<br/>
			<!-- <div align="right">
				<%= link_to '... forget your password?', new_user_password_path , class: 'link', style: "width:100%"%>
			</div> -->

	</div>

	 <div class="col-md-4"></div>

 </div>