<br>
<div align="center"><h2 class="magicfont">Welcome!</h2></div>
<br>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>
	  	<div class="form-inputs">
	  		<h4>ユーザー名</h4>
			<div>
		  		<%= f.text_field :user_name, required: true, autofocus: true, class: 'text_i_b', placeholder: " User Name"%>
	  		</div>
			
			<h4 style="margin-top:1em;">パスワード</h4>
			<div>
		    	<%= f.password_field :password, autocomplete: "off", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , class: 'text_i_b', placeholder: " Password - ８文字以上の英数字"%>
			</div>
	  		
	  		<h4 style="margin-top:2em;">メールアドレス（Optional）</h4>
			<div>
		    	<%= f.email_field :email, autocomplete: "off", required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , class: 'text_i_b', placeholder: " E-mail"%>
			</div>
	  		<br><br>
	  	</div>

	  	<div class="form-actions" align="center">
	    	<%= f.submit "登録" , class: 'button_b_up'%>
	  	</div>
	<% end %>
<br/>