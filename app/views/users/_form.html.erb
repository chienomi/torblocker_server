<% if @user.id == current_user.id %>

<div style="width:700px;margin:0 auto;">
  <h2 align="center">Editing...</h2>
<%= form_for @user, :html => {:multipart => true} do |f| %>

  <div class="row">
  <div class="col-md-12"> <!-- user start -->
    <div align="center">User Name</div>
      <div class="user_name">
        <%= f.text_field :user_name, autocomplete: "off", required: false, class: "form-control" , style: "width:100%", value: @user.user_name%>
        <div id="form_image">
        <%= render 'form_image' %>
        </div>
      <div id="image_user_update">
         <%= f.file_field :image_user, :title => "Upload" %>
      </div>

      </div>

      <div align="center" style="padding-top:14px;">Bio</div>
      <div class="bio" style='font-weight:300;'>
        <% if @user.bio == "" %><% @user.bio = "Is " + @user.user_name + " is ninja? " + @user.user_name + "\'s bio is currently blank." %><%end%>
        <%= f.text_field :bio, autocomplete: "off", required: false, class: "form-control" , style: "width:100%", value: @user.bio%>
      </div>
  </div> <!-- user end -->
</div>
<br><br>

    <h4 align="center">Email (will not be public)</h4>
    <%= f.text_field :email, autocomplete: "on", required: false, class: "form-control" , style: "width:100%", value: @user.email%>
    <br><br><br>

  <div align="center">
    <%= f.submit "Done" , class: "btn btn-default", style: "width:10%"%>
  </div>

<% end %>
</div>

<% end %>