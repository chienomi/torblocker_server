<div align="center" style="height:120px"></div>
<div class="row"><div class="col-md-6">

<h2>Signing in</h2>
	<br>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>
	  	<div class="form-inputs">
			<div>
		  		<%= f.text_field :user_name, required: true, autofocus: true, class: 'text_i_b', placeholder: " Name"%>
	  		</div>
	  		<br>
	  		<div>
		    	<%= f.email_field :email, required: true, class: 'text_i_b', placeholder: " e-mail"%>
			</div>
			<br>
			<div>
		    	<%= f.password_field :password, autocomplete: "off", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , class: 'text_i_b', placeholder: " Password"%>
			</div>
			<br>
			<div>
		    	<%= f.password_field :password_confirmation, autocomplete: "off", required: true , class: 'text_i_b', placeholder: " Password Confirmation"%>
	  		</div>
	  		<br>
			<div>
			　<%= f.check_box :agreement %>　 I read and accept <%= link_to "Terms", terms_path, class: "link"%>
	  		</div>
	  		<br>
	  		<div class="g-recaptcha" data-sitekey="6LcPBhgTAAAAAG0ify2nXoWV6gl472x95q3Opvq7"></div>
	  	</div>

	  	<div class="form-actions">
	    	<%= f.submit "Sign up" , class: 'button_b_up'%>
	  	</div>
	<% end %>
	<br/>
	<div align="right">
		<%= link_to '... forget password?', new_user_password_path , class: 'link_b'%>
	</div>


</div></div>